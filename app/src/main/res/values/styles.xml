<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" />
    <style name="Widget.Toolbar" />

    <style name="Widget.Toolbar.Icon" parent="">
        <item name="android:layout_width">?actionBarSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Widget.Toolbar.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/secondary</item>
    </style>



</resources>